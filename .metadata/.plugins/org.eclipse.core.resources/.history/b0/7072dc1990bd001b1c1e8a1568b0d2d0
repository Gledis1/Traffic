	  @DeleteMapping("/lights/{id}")
	  public void deleteLight(@PathVariable("id") String id) {
	    
	  }

	  @DeleteMapping("/lights")
	  public void deleteAllLights() {
	    
	  }

	  @GetMapping("/lights/resolution")
	  public ResponseEntity<List<Light>> findByResolution() {
		return findByResolution();
	    
	  }
	
}
